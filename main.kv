#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<RootScreen>:
    transition: FadeTransition() 
    StartScreen:
    GameScreen:

<StartScreen>:
    name: "start"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "zz.jpg"
    FloatLayout:
        Button:
            color: (0.25, 0.25, 0.25)
            text: "Next!"
            size_hint: 0.4, 0.3
            font_size: 40
            on_release: root.manager.current = "game"

<GameScreen>:
    name: "game"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "zzz.jpg"
    FloatLayout:
        Button:
            color: (0.25, 0.25, 0.25)
            text: "Back!"
            size_hint: 0.4, 0.3
            font_size: 40
            on_release: root.manager.current = "start"


<FullImage>:
    canvas:
        Color: 
            rgb: (0.93, 0.93, 0.93)
        Rectangle:
            texture: self.texture
            color: ( 1, 1, 1, .1)
            size: self.width + 20, self.height + 20
            pos: self.x - 10, self.y - 10
#          on_release: root.manager.current = "start"
