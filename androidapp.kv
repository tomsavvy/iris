    MenuItem:
        text: 'Operational Guide'

<GeneralSettings>:
    orientation: 'vertical'
    spacing: 1
    background_color: (1, 1, 1, 1)
    AppActionBar:
    
<AppActionBar>:
    size_hint: (1., 0.1)
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionMenu:
            title: 'Iris'
            with_previous: False
            app_icon: 'zzz.jpg'
            on_press: self.menu()
        ActionOverflow:
        ActionQuit:
            text: 'X'
            on_press: self.menu()

<AppButton>:    
    # color:(1, 1, 1)
    text: 'Application'
    on_press: self.app_pushed()
    on_release: print 'Made You :P' + self.app_pushed()
    Button:
        pos: (250,250)
    Image:
        source: 'mic.jpg'
        pos: (250,250)
        allow_stretch: False       

<MainPanel>:
    orientation: 'vertical'
    spacing: 1
    background_color: (1, 1, 1, 1)
    AppActionBar:
    AppButton:
    
