#:kivy 1.8.0

<SidePanel>:
    orientation: 'vertical'
    spacing: 1

    MenuItem:
        text: 'Home Page'

    MenuItem:
        text: 'Recent Commands'

    MenuItem:
        text: 'In-Built Commands'

    MenuItem:
        text: 'Operational Guide'


<AppActionBar>:
    pos_hint: {'top':1}
    ActionView:
        use_separator: True
        ActionMenu:
            title: 'Iris'
            with_previous: False
            app_icon: 'zzz.jpg'
            on_press: self.menu()
        ActionOverflow:
        ActionQuit:
            text: 'X'
            icon: 'atlas://data/images/defaulttheme/close'
            on_press: self.menu()

<MainPanel>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    AppButton:
        id: bottone
        nome_bottone: bottone
        text: 'Application'
        on_press: self.app_pushed()
        on_release: self.app_pushed()

<PageFour>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    Label:
        text: 'Operational Guide'

<PageThree>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    Image:
        source: 'zz.jpg'

<PageTwo>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    Label:
        text: 'Recent Commands'

<PageOne>:
    orientation: 'vertical'
    spacing: 1

    AppActionBar:
        size_hint: (1., 0.1)

    Label:
        text: 'Home Screen'
